{
    "settings": {
        "analysis" : {
            "analyzer" : {
                "case_sensitive" : {
                    "type" : "custom",
                    "tokenizer" : "keyword"
                }
            }
        }
    },
    "mappings" : {
        "_default_" : {
            "properties" : {
                "EXPENSES_ID" : {"type": "integer" },
                "CITY" : {"type": "string", "index": "not_analyzed" },
                "DEPARTMENT" : { "type" : "string", "index": "not_analyzed" },
                "EMPLOYEE" : { "type" : "text", "index": "analyzed", "analyzer" : "case_sensitive"  },
                "CREATION_DATE" : { 
                    "type" : "date",
                    "format": "MM-dd-yyyy Z"
                },
                "AMOUNT" : { "type" : "float" }
            }
        }
    }
}