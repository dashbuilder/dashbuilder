<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:org.dashbuilder.displayer.client">

  <ui:style>
    .margin {
      margin: 5px;
    }
  </ui:style>

  <g:VerticalPanel>
    <g:HorizontalPanel>
      <g:VerticalPanel>
        <g:FlowPanel addStyleNames="{style.margin}">
          <my:Displayer ui:field="countrySelector"/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.margin}">
          <my:Displayer ui:field="salesmanSelector"/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.margin}">
          <my:Displayer ui:field="customerSelector"/>
        </g:FlowPanel>
      </g:VerticalPanel>
      <my:Displayer ui:field="areaChartByDate"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel>
      <my:Displayer ui:field="pieChartByPipeline"/>
      <my:Displayer ui:field="pieChartYears"/>
      <my:Displayer ui:field="pieChartQuarters"/>
      <my:Displayer ui:field="barChartDayOfWeek"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel>
      <my:Displayer ui:field="tableAll"/>
    </g:HorizontalPanel>
  </g:VerticalPanel>

</ui:UiBinder>