<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:editor="urn:import:org.dashbuilder.common.client.editor">

  <ui:with field="i18n" type="org.dashbuilder.client.widgets.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .row {
      margin-bottom: 5px;
    }
    .attr {
      float: left;
      margin-right: 5px;
    }
  </ui:style>
  
  <b:Container fluid="true">

    <!-- Server URL. -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.el_server_url}" addStyleNames="{style.attr}"/>
        <b:Tooltip isAnimated="true" placement="BOTTOM" title="{i18n.el_server_url_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View ui:field="serverUrlView">
          <editor:valuebox>
            <b:TextBox placeholder="{i18n.el_server_url_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- Cluster name. -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.el_cluster_name}" addStyleNames="{style.attr}"/>
        <b:Tooltip isAnimated="true" placement="BOTTOM" title="{i18n.el_cluster_name_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View ui:field="clusterNameView">
          <editor:valuebox>
            <b:TextBox placeholder="{i18n.el_cluster_name_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- Index. -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.el_index}" addStyleNames="{style.attr}"/>
        <b:Tooltip isAnimated="true" placement="BOTTOM" title="{i18n.el_index_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View ui:field="indexView">
          <editor:valuebox>
            <b:TextBox placeholder="{i18n.el_index_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- Type. -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.el_type}" addStyleNames="{style.attr}"/>
        <b:Tooltip isAnimated="true" placement="BOTTOM" title="{i18n.el_type_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View ui:field="typeView">
          <editor:valuebox>
            <b:TextBox placeholder="{i18n.el_type_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>
    
  </b:Container>
  
</ui:UiBinder>