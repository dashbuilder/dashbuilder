<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:dash-client="urn:import:org.dashbuilder.common.client.validation.editors"
    >

  <ui:with field="i18n" type="org.dashbuilder.client.widgets.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .mainPanel {
      float: left;
      width: 100%;
    }
    .label {
      float: left;
      margin-top: 3px;
      margin-right: 10px;
    }
    .input {
    }
  </ui:style>

  <!-- Common attributes. -->
  <g:FlowPanel ui:field="basicAttributesPanel" addStyleNames="{style.mainPanel} ">

    <!-- UUID. -->
    <b:Row>
      <b:Column size="MD_2">
        <g:HTML text="{i18n.attributeUUID}" addStyleNames="{style.label}"/>
      </b:Column>
      <b:Column size="MD_3">
        <b:Popover showDelayMs="1000" placement="BOTTOM" content="{i18n.attributeUUID_description}" title="{i18n.attributeUUID}">
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP_BOTTOM" ui:field="attributeUUID" addStyleNames="{style.input}">
            <dash-client:valuebox>
              <b:TextBox enabled="false" placeholder="{i18n.attributeUUID}"/>
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </b:Popover>
      </b:Column>
    </b:Row>

    <!-- Name. -->
    <b:Row>
      <b:Column size="MD_2">
        <g:HTML text="{i18n.attributeName}" addStyleNames="{style.label}"/>
      </b:Column>
      <b:Column size="MD_3">
        <b:Popover showDelayMs="1000" placement="BOTTOM" content="{i18n.attributeName_description}" title="{i18n.attributeName}">
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP_BOTTOM" ui:field="name" addStyleNames="{style.input}">
            <dash-client:valuebox>
              <b:TextBox placeholder="{i18n.attributeName}" />
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </b:Popover>
      </b:Column>
    </b:Row>
    
  </g:FlowPanel>

</ui:UiBinder>