<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
  <ui:style type="org.dashbuilder.common.client.validation.editors.ValueBoxEditorDecorator.ValueBoxEditorDecoratorStyle">
    .contents {
      display: inline;
    }
    .errorLabel {
      display: none;
      white-space: pre;
    }
    .errorLabelLeft {
      float: left;
    }
    .errorLabelRight {
      float: right;
    }
  </ui:style>
  <g:HTMLPanel>
    <b:Tooltip title="" ui:field="errorTooltip">
      <g:SimplePanel ui:field="contents" stylePrimaryName="{style.contents}" />
    </b:Tooltip>
    <div class="{style.errorLabel}" ui:field="errorLabel" />
  </g:HTMLPanel>
</ui:UiBinder>