<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.dashbuilder.displayer.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .cellPaddingPanel {
      padding: 10px;
    }
  </ui:style>

  <g:VerticalPanel styleName="{style.cellPaddingPanel}">
    <g:HorizontalPanel styleName="{style.cellPaddingPanel}">
      <b:CheckBox ui:field="fixedStrategyCheckBox" />
      <g:Label text="{i18n.dataset_groupdate_fixed_intervals}"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel styleName="{style.cellPaddingPanel}">
      <b:CheckBox ui:field="emptyIntervalsCheckBox" />
      <g:Label text="{i18n.dataset_groupdate_empty_intervals}"/>
    </g:HorizontalPanel>
    <g:VerticalPanel>
      <g:Label text="{i18n.dataset_groupdate_interval_type}"/>
      <b:ListBox ui:field="intervalTypeListBox" width="130px" />
    </g:VerticalPanel>
    <g:VerticalPanel ui:field="maxIntervalsGroup" visible="false">
      <g:Label text="{i18n.dataset_groupdate_max_intervals}"/>
      <b:TextBox ui:field="maxIntervalsTextBox" width="130px" />
    </g:VerticalPanel>
    <g:VerticalPanel ui:field="firstDayPanel" visible="false">
      <g:Label text="{i18n.dataset_groupdate_firstday}"/>
      <b:ListBox ui:field="firstDayListBox" width="130px"/>
    </g:VerticalPanel>
    <g:VerticalPanel ui:field="firstMonthPanel" visible="false">
      <g:Label text="{i18n.dataset_groupdate_firstmonth}"/>
      <b:ListBox ui:field="firstMonthListBox" width="130px"/>
    </g:VerticalPanel>
  </g:VerticalPanel>
</ui:UiBinder>
